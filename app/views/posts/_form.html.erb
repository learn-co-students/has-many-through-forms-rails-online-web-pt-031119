<div class=post-content>
  <%= @post.content %>
</div>
<%= form_for post do |f| %>
  <div>
  <%= f.label "Title" %>
  <br>
  <%= f.text_field :title %>
  </div>
  <div>
  <%= f.label "Content" %>
  <br>
  <%= f.text_area :content %>
  </div>
  <div>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  </div>
  <div>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name, placeholder: 'New Category' %>
  </div>
  <% end %>
  <%= f.submit %>
<% end %>
